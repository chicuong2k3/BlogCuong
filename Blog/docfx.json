{
  "build": {
    "content": [
      {
        "files": ["**/*.{md,yml}"],
        "exclude": ["_site/**"]
      }
    ],
    "resource": [
      {
        "files": ["images/**"]
      }
    ],
    "output": "_site",
    "template": ["default", "modern", "templates/material"],
    "globalMetadata": {
      "_appTitle": "Dr.Cuong",
      "_appFooter": "<b style='display: flex; justify-content: center;'>Created by Chí Cường</b>",
      "_lang": "vi",
      "_appLogoPath": "images/logo.svg",
      "_appFaviconPath": "images/logo.svg",
      "_disableBreadcrumb": true,
      "_disableNavbar": false,
      "_disableTocFilter": true,
      "_disableContribution": true,
      "_enableSearch": true,
      "pdf": true,
      "pdfTocPage": true,
      "pdfPrintBackground": true,
      "pdfFooterTemplate": "<div style='width: 100%; font-size: 16px;font-weight: 600'><div style='float: right; padding: 0 2em'><span class='pageNumber'></span></div></div>"
    },
    "postProcessors": ["ExtractSearchIndex"],
    "markdownEngineProperties": {
      "markdigExtensions": ["Abbreviations", "Footnotes"],
      "alerts": {
        "QUOTE": "alert alert-quote",
        "TIP": "alert alert-success"
      }
    },
    "sitemap": {
      "baseUrl": "https://dotnet.github.io/docfx",
      "priority": 0.1,
      "changefreq": "weekly"
    }
  }
}
